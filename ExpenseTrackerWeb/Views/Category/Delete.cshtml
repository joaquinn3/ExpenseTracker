@model Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="row">
    <div class="col-md-6">
        <a asp-action="Index" class="link-light link-offset-2 link-underline-opacity-25 link-underline-opacity-0-hover text-dark">
            <i class="bi bi-arrow-left"></i> Back
        </a>
        <h2 class="mb-3">Delete Category</h2>
        <div class="widget p-5 shadow">
            <form method="post">
                <input asp-for="CategoryId" hidden />
                <div class="mb-3">
                    <div class="e-btn-group custom-rbt-group">
                        <input disabled type="radio" id="expenseRadio" name="Type" value="Expense"/>
                        <label class="e-btn btn-expense" for="expenseRadio">Expense</label>

                        <input disabled type="radio" id="incomeRadio" name="Type" value="Income"/>
                        <label class="e-btn btn-income" for="incomeRadio">Income</label>
                    </div>
                </div>

                <fieldset>

                    <div class="mb-3">
                        <ejs-textbox id="name" placeholder="Category name" ejs-for="Name" enabled="false"></ejs-textbox>
                        <span asp-validation-for="Name" class="text-danger fs-6"></span>
                    </div>

                    <div class="mb-3">
                        <ejs-textbox id="icon" placeholder="Icon [Win+Period]" ejs-for="Icon" enabled="false"></ejs-textbox>
                        <span asp-validation-for="Icon" class="text-danger fs-6"></span>
                    </div>
                </fieldset>

                <ejs-button id="submit-delete" type="submit" content="Delete"></ejs-button>
            </form>
        </div>
    </div>

    <div class="col-md-6">
        <h3 class="text-white">A</h3>
        <div class="h-100 d-flex justify-content-center align-items-center">
            <img src="~/images/Delete.png" width="300" height="300">
        </div>
    </div>
</div>